{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Plume",
    "patterns": [
        {
            "include": "#keywords"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#types"
        },
        {
            "include": "#functions"
        },
        {
            "include": "#annotations"
        },
        {
            "include": "#methods"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#comments"
        },
        {
            "include": "#user_types"
        },
        {
            "include": "#macros"
        }
    ],
    "repository": {
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.plume",
                    "match": "\\b(if|then|else|switch|case|return|type|extend|with|infixr)\\b"
                }
            ]
        },
        "strings": {
            "name": "string.quoted.double.plume",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.plume",
                    "match": "\\\\."
                }
            ]
        },
        "types": {
            "patterns": [
                {
                    "name": "support.type.plume",
                    "match": "\\b(int|str|bool|char|Option|Result|Parser|ParserResult)\\b"
                }
            ]
        },
        "functions": {
            "patterns": [
                {
                    "name": "entity.name.function.plume",
                    "match": "\\b(\\w+)\\s*\\("
                }
            ]
        },
        "annotations": {
            "patterns": [
                {
                    "name": "annotation.plume",
                    "match": "@\\w+"
                }
            ]
        },
        "methods": {
            "patterns": [
                {
                    "name": "entity.name.function.method.plume",
                    "match": "\\.(\\w+)\\b"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.plume",
                    "match": "(\\+|\\-|\\*|\\/|\\=\\=|\\=|\\<\\=|\\>\\=|\\<|\\>|\\.\\.|\\[|\\]|\\(|\\)|\\:|\\?|\\,|\\>\\>)"
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.plume",
                    "match": "\\b\\d+\\b"
                }
            ]
        },
        "comments": {
            "patterns": [
                {
                    "name": "comment.block.plume",
                    "begin": "/**",
                    "end": "*/",
                    "captures": {
                        "0": {
                            "name": "punctuation.definition.comment.plume"
                        }
                    }
                },
                {
                    "name": "comment.line.double-slash.plume",
                    "begin": "//",
                    "end": "$",
                    "captures": {
                        "0": {
                            "name": "punctuation.definition.comment.plume"
                        }
                    }
                }
            ]
        },
        "user_types": {
            "patterns": [
                {
                    "name": "entity.name.type.plume",
                    "match": "\b(user|ParserResult|Parser)\b"
                }
            ]
        },
        "macros": {
            "patterns": [
                {
                    "name": "entity.name.function.macro.plume",
                    "match": "\\b(@\\w+)\\b"
                }
            ]
        }
    },
    "scopeName": "source.plume"
}